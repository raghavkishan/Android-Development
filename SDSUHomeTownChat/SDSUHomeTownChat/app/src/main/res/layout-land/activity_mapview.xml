<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_user"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.raghavkishan.sdsuhometownchat.Mapview">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapViewFrag"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        tools:context="com.example.raghavkishan.sdsuhometownchat.Mapview" />

    <Button
        android:id="@+id/map_view_next_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_users"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:onClick="addUsers"/>

    <TextView
        android:id="@+id/map_view_current_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_view_next_set"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="44dp"
        android:text="@string/current_User_label"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/map_view_current_user_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/map_view_current_user_label"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/map_view_current_user_label"
        android:text="TextView"
        android:textSize="20dp"/>


</RelativeLayout>