<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raghavkishan.sdsuhometownchat.RegisterUser">


    <TextView
        android:id="@+id/regsiter_user_heading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regsiter_user_heading_label_string"
        android:layout_marginTop="36dp"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/regsiter_user_heading_label"
        android:layout_alignParentBottom="true"
        android:id="@+id/tableLayout5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/nick_name_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/nick_name_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/nick_name_value_hint_string"
                android:ems="10"
                android:id="@+id/nick_name_value" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/country_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/country_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/register_user_country_spinner"
                android:layout_alignParentStart="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/state_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/state_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/register_user_state_spinner"
                android:layout_alignParentStart="true" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/city_label_string"
                android:textSize="17dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/city_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/city_value_hint_string"
                android:ems="10"
                android:id="@+id/city_value" />

        </TableRow>

        <TableRow>

            <TextView />

            <Button
                android:text="@string/set_location_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_location_on_map_button"
                android:textAllCaps="false"
                android:onClick="onClickLocationButton"
                android:textSize="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/year_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/year_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/register_user_year_spinner"
                android:layout_alignParentStart="true" />

        </TableRow>



    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="250dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="200dp"
        android:id="@+id/tableLayout9">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/email_id_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/reister_user_email_id_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/register_user_email_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/password_label_string"
                android:textSize="20dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/register_user_password_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/register_user_password_value"
                android:hint="@string/password_value_hint_string"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/register_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_user_button_label_string"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="34dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:onClick="postToServer"
        android:layout_above="@+id/clear_fields_button"
        android:layout_toEndOf="@+id/regsiter_user_heading_label" />

    <Button
        android:id="@+id/clear_fields_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:text="@string/clear_fields_button_string"
        android:textAllCaps="false"
        android:onClick="clearAllFields"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/register_user_button"
        android:layout_marginLeft="8dp"/>


</RelativeLayout>

